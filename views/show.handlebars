<h1 class="mb-1 restaurant-show-title">{{singleRestaurant.name}}</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別 ：
        </span>
        {{singleRestaurant.category}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址 ：
        </span>
        {{singleRestaurant.location}}
        <a href="{{singleRestaurant.google_map}}" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話 ：
        </span>
        {{singleRestaurant.phone}}
      </p>

      <p class="mbt-5 bg-light">
        {{singleRestaurant.description}}
      </p>

      <img class="rounded mx-auto d-block mb-4 w-100" src="{{singleRestaurant.image}}" alt="{{singleRestaurant.name}}"
        style="max-width: 600px;">
    </div>
  </div>
</div>