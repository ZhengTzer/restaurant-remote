<div class="container p-5">
  <form action="/restaurant" method='POST'>
    <!--name-->
    <div class="form-group row">
      <label for="name" class="col-sm-2 col-form-label">餐廳名稱 - 中文*</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="name" name='name' placeholder="好好吃餐廳">
      </div>
    </div>

    <!--name_en-->
    <div class="form-group row">
      <label for="name_en" class="col-sm-2 col-form-label">餐廳名稱 - 英文</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="name_en" name='name_en' placeholder="hao hao chi restaurant">
      </div>
    </div>

    <!--category-->
    <div class="form-group row">
      <label for="category" class="col-sm-2 col-form-label">餐廳類別</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="category" name='category' placeholder="category">
        <label for="category">中東料理 | 日本料理 | 義式餐廳 | 美式 | 酒吧 | 咖啡 | 其他</label>
      </div>
    </div>

    <!--image-->
    <div class="form-group row">
      <label for="image" class="col-sm-2 col-form-label">上傳餐廳照片</label>
      <div class="col-sm-10">
        <input type="file" class="form-control-file" id="image" name='image'>
      </div>
    </div>

    <!--location-->
    <div class="form-group row">
      <label for="location" class="col-sm-2 col-form-label">餐廳地址</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="location" name='location' placeholder="">
      </div>
    </div>

