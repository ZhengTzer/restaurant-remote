    <!--phone-->
    <div class="form-group row">
      <label for="phone" class="col-sm-2 col-form-label">餐廳電話</label>
      <div class="col-sm-10">
        <input type="number" class="form-control" id="phone" name='phone' placeholder="02 1234 5678">
      </div>
    </div>

    <!--google_map-->
    <div class="form-group row">
      <label for="google_map" class="col-sm-2 col-form-label">Google Map</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="google_map" name='google_map'
          placeholder="https://goo.gl/maps/zbERa4N1jkcHYjHk6">
      </div>
    </div>

    <!--rating-->
    <div class="form-group row">
      <label for="rating" class="col-sm-2 col-form-label">評分</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="rating" name='rating' placeholder="4.0">
      </div>
    </div>

    <!--description-->
    <div class="form-group row">
      <label for="description" class="col-sm-2 col-form-label">描述</label>
      <div class="col-sm-10">
        <textarea class="form-control" id="description" rows="3" maxlength="180" name='description'></textarea>
      </div>
    </div>

    <!---submit button-->
    <div class="text-center">
      <button type="submit" class="btn btn-primary btn-lg">儲存</button>
    </div>
  </form>
