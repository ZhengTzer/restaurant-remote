    <!--name-->
    <div class="form-group row">
      <label for="name" class="col-sm-2 col-form-label">餐廳名稱 - 中文</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="name" name='name' value="{{singleRestaurant.name}}">
      </div>
    </div>

    <!--name_en-->
    <div class="form-group row">
      <label for="name_en" class="col-sm-2 col-form-label">餐廳名稱 - 英文</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="name_en" name='name_en' value='{{singleRestaurant.name_en}}'>
      </div>
    </div>

    <!--category-->
    <div class="form-group row">
      <label for="category" class="col-sm-2 col-form-label">餐廳類別</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="category" name='category' value='{{singleRestaurant.category}}'>
      </div>
    </div>

    <!--image-->
    <div class="form-group row">
      <label for="image" class="col-sm-2 col-form-label">上傳餐廳照片</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="image" name='image' value='{{singleRestaurant.image}}'>
      </div>
    </div>

    <!--location-->
    <div class="form-group row">
      <label for="location" class="col-sm-2 col-form-label">餐廳地址</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="location" name='location' value='{{singleRestaurant.location}}'>
      </div>
    </div>

