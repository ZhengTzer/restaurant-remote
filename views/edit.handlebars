      <label for="phone" class="col-sm-2 col-form-label">餐廳電話</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="phone" name='phone' value='{{singleRestaurant.phone}}'>
      </div>
    </div>

    <!--google_map-->
    <div class="form-group row">
      <label for="google_map" class="col-sm-2 col-form-label">Google Map</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="google_map" name='google_map'
          value='{{singleRestaurant.google_map}}'>
      </div>
    </div>

    <!--rating-->
    <div class="form-group row">
      <label for="rating" class="col-sm-2 col-form-label">評分</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="rating" name='rating' value='{{singleRestaurant.rating}}'>
      </div>
    </div>

